    },
    "neutral": {
      "50": "#FAFAFA",
      "100": "#F5F5F5",
      "200": "#EEEEEE",
      "300": "#E0E0E0",
      "400": "#BDBDBD",
      "500": "#9E9E9E",
      "600": "#757575",
      "700": "#616161",
      "800": "#424242",
      "900": "#212121",
      "description": "Neutral grays - used for text, borders, and backgrounds"
    },
    "semantic": {
      "success": {
        "light": "#d4edda",
        "main": "#28a745",
        "dark": "#1e7e34",
        "border": "#c3e6cb",
        "description": "Success states and positive feedback"
      },
      "error": {
        "light": "#f8d7da",
        "main": "#dc3545",
        "dark": "#bd2130",
        "border": "#f5c6cb",
        "description": "Error states and negative feedback"
      },
      "warning": {
        "light": "#fff3cd",
        "main": "#ffc107",
        "dark": "#e0a800",
        "border": "#ffc107",
        "description": "Warning states and caution messages"
      },
      "info": {
        "light": "#d1ecf1",
        "main": "#17a2b8",
        "dark": "#117a8b",
        "border": "#bee5eb",
        "description": "Informational messages and hints"
      }
    },
    "text": {
      "primary": "#212121",
      "secondary": "#616161",
      "disabled": "#9E9E9E",
      "inverse": "#FFFFFF",
      "description": "Text color hierarchy for readability"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": "'Inter', 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif",
      "mono": "'Fira Code', 'Monaco', 'Consolas', monospace",
      "description": "Font stack with system fallbacks"
    },
    "fontSize": {
      "h1": {
        "size": "2.5rem",
        "lineHeight": "1.2",
        "fontWeight": "700",
        "pixels": "40px",
        "usage": "Main page title"
      },
      "h2": {
        "size": "2rem",
        "lineHeight": "1.3",
        "fontWeight": "600",
        "pixels": "32px",
        "usage": "Section headers"
      },
      "h3": {
        "size": "1.5rem",
        "lineHeight": "1.4",
        "fontWeight": "600",
        "pixels": "24px",
        "usage": "Subsection headers"
      },
      "h4": {
        "size": "1.25rem",
        "lineHeight": "1.5",
        "fontWeight": "600",
        "pixels": "20px",
        "usage": "Card headers"
      },
      "h5": {
        "size": "1.125rem",
        "lineHeight": "1.5",
        "fontWeight": "600",
        "pixels": "18px",
        "usage": "Small headers"
      },
      "h6": {
        "size": "1rem",
        "lineHeight": "1.5",
        "fontWeight": "600",
        "pixels": "16px",
        "usage": "Tiny headers"
      },
      "body": {
        "size": "1rem",
        "lineHeight": "1.6",
        "fontWeight": "400",
        "pixels": "16px",
        "usage": "Default body text"
      },
      "bodySmall": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "fontWeight": "400",
        "pixels": "14px",
        "usage": "Small body text"
      },
      "caption": {
        "size": "0.75rem",
        "lineHeight": "1.4",
        "fontWeight": "400",
        "pixels": "12px",
        "usage": "Captions and helper text"
      },
      "button": {
        "size": "0.875rem",
        "lineHeight": "1",
        "fontWeight": "600",
        "pixels": "14px",
        "usage": "Button text"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": {
        "value": "0.25rem",
        "pixels": "4px",
        "usage": "Tight spacing"
      },
      "sm": {
        "value": "0.5rem",
        "pixels": "8px",
        "usage": "Small gaps"
      },
      "md": {
        "value": "1rem",
        "pixels": "16px",
        "usage": "Default spacing"
      },
      "lg": {
        "value": "1.5rem",
        "pixels": "24px",
        "usage": "Section spacing"
      },
      "xl": {
        "value": "2rem",
        "pixels": "32px",
        "usage": "Large spacing"
      },
      "2xl": {
        "value": "3rem",
        "pixels": "48px",
        "usage": "Major sections"
      },
      "3xl": {
        "value": "4rem",
        "pixels": "64px",
        "usage": "Page sections"
      }
    },
    "component": {
      "buttonPaddingX": "1.5rem",
      "buttonPaddingY": "0.625rem",
      "cardPadding": "1.5rem",
      "containerPadding": "2rem",
      "inputPaddingX": "0.75rem",
      "inputPaddingY": "0.625rem"
    },
    "baseline": "8px",
    "description": "8px baseline grid system"
  },
  "borderRadius": {
    "none": "0",
    "sm": {
      "value": "0.25rem",
      "pixels": "4px",
      "usage": "Subtle rounded corners"
    },
    "md": {
      "value": "0.5rem",
      "pixels": "8px",
      "usage": "Default border radius"
    },
    "lg": {
      "value": "0.75rem",
      "pixels": "12px",
      "usage": "Cards and containers"
    },
    "xl": {
      "value": "1rem",
      "pixels": "16px",
      "usage": "Modals and large elements"
    },
    "2xl": {
      "value": "1.5rem",
      "pixels": "24px",
      "usage": "Hero sections"
    },
    "full": {
      "value": "9999px",
      "usage": "Pills and circular elements"
    }
  },
  "shadows": {
    "none": "none",
    "sm": {
      "value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "usage": "Subtle elevation"
    },
    "md": {
      "value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "usage": "Default card shadow"
    },
    "lg": {
      "value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "usage": "Elevated cards"
    },
    "xl": {
      "value": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "usage": "Modal and popover"
    },
    "2xl": {
      "value": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "usage": "Maximum elevation"
    },
    "inner": {
      "value": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
      "usage": "Inset shadow for inputs"
    }
  },
  "components": {
    "card": {
      "variants": {
        "default": {
          "background": "neutral.50",
          "border": "neutral.300",
          "borderWidth": "1px",
          "borderRadius": "lg",
          "padding": "cardPadding",
          "shadow": "sm"
        },
        "elevated": {
          "extends": "default",
          "shadow": "md"
        },
        "success": {
          "background": "semantic.success.light",
          "border": "semantic.success.border",
          "borderWidth": "2px",
          "borderLeftWidth": "4px",
          "borderLeftColor": "semantic.success.main"
        },
        "error": {
          "background": "semantic.error.light",
          "border": "semantic.error.border",
          "borderWidth": "2px",
          "borderLeftWidth": "4px",
          "borderLeftColor": "semantic.error.main"
        },
        "warning": {
          "background": "semantic.warning.light",
          "border": "semantic.warning.border",
          "borderWidth": "2px",
          "borderLeftWidth": "4px",
          "borderLeftColor": "semantic.warning.main"
        },
        "info": {
          "background": "semantic.info.light",
          "border": "semantic.info.border",
          "borderWidth": "2px",
          "borderLeftWidth": "4px",
          "borderLeftColor": "semantic.info.main"
        }
      }
    },
    "button": {
      "variants": {
        "primary": {
          "background": "primary.500",
          "color": "text.inverse",
          "hoverBackground": "primary.600",
          "borderRadius": "md",
          "paddingX": "buttonPaddingX",
          "paddingY": "buttonPaddingY",
          "fontWeight": "600",
          "shadow": "sm",
          "hoverShadow": "md"
        },
        "secondary": {
          "background": "neutral.100",
          "color": "text.primary",
          "hoverBackground": "neutral.200",
          "border": "neutral.300"
        },
        "danger": {
          "background": "semantic.error.main",
          "color": "text.inverse",
          "hoverBackground": "semantic.error.dark"
        }
      }
    },
    "input": {
      "base": {
        "borderRadius": "md",
        "border": "neutral.300",
        "paddingX": "inputPaddingX",
        "paddingY": "inputPaddingY",
        "focusBorder": "primary.500",
        "shadow": "inner"
      }
    },
    "fileUploadZone": {
      "background": "primary.50",
      "border": "primary.500",
      "borderWidth": "2px",
      "borderStyle": "dashed",
      "borderRadius": "xl",
      "padding": "containerPadding",
      "hoverBackground": "primary.100",
      "hoverBorder": "primary.700",
      "hoverShadow": "md"
    }
  },
  "accessibility": {
    "wcagLevel": "AA",
    "contrastRatios": {
      "normalText": "4.5:1",
      "largeText": "3:1",
      "uiComponents": "3:1"
    },
    "focusIndicator": {
      "color": "primary.500",
      "width": "2px",
      "style": "solid",
      "offset": "2px"
    }
  },
  "breakpoints": {
    "mobile": "640px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1280px",
    "ultrawide": "1536px"
  },
  "metadata": {
    "created": "2025-11-27",
    "platform": "Streamlit",
    "framework": "Custom (shadcn/ui inspired)",
    "designPrinciples": [
      "Consistency through tokens",
      "Accessible by default",
      "Progressive disclosure",
      "Clear visual hierarchy",
      "Responsive and mobile-friendly"
    ]
  }
}

    "accent": {
      "50": "#FFF8E1",
      "100": "#FFECB3",
      "200": "#FFE082",
      "300": "#FFD54F",
      "400": "#FFCA28",
      "500": "#FFC107",
      "600": "#FFB300",
      "700": "#F57C00",
      "800": "#EF6C00",
      "900": "#E65100",

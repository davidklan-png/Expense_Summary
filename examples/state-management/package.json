{
  "name": "optimistic-ui-state-management",
  "version": "1.0.0",
  "description": "State management implementations (XState, Redux, Zustand) for Optimistic UI",
  "main": "index.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0",

    "xstate": "^5.0.0",
    "@xstate/react": "^4.0.0",

    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.0.4",

    "zustand": "^4.4.7",
    "immer": "^10.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.5",

    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",

    "typescript": "^5.3.3",

    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",

    "prettier": "^3.1.1",

    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "jsdom": "^23.0.1",

    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "xstate",
    "redux",
    "zustand",
    "state-machine",
    "optimistic-ui",
    "react",
    "typescript",
    "state-management"
  ],
  "author": "Saisonxform",
  "license": "MIT"
}
